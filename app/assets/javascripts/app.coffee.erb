receta = angular.module('receta', [
  'templates',
  'ngRoute',
  'ngResource'
  'controllers',
])

receta.config([ '$routeProvider',
  ($routeProvider)->
    $routeProvider
      .when('/',
        templateUrl: "index.html",
        controller: 'HostsController'
      ).when('/hosts/:hostId',
        templateUrl: "show.html",
        controller: 'HostController'
      )
])

controllers = angular.module('controllers', [])
